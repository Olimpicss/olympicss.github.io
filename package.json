{
  "name": "olympicss-web",
  "description": "Like Olympics but for CSS",
  "homepage": "https://github.com/OlimpiCSS/web",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/ui/index.html",
    "build": "parcel build src/ui/index.html",
    "test": "jest --coverage",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.ts",
    "lint:css": "stylelint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "lit-element": "2.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@babel/preset-typescript": "7.7.4",
    "@storybook/web-components": "5.3.0-alpha.25",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "@typescript-eslint/eslint-plugin": "2.10.0",
    "@typescript-eslint/parser": "2.10.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.6",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "parcel-bundler": "1.12.4",
    "prettier": "1.19.1",
    "stylelint": "12.0.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.9.0",
    "ts-mockito": "2.5.0",
    "typescript": "3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "Chrome > 50",
    "not op_mini all"
  ]
}
